@font_size:  @16pt;
@inner_space: 5px;
//@inner_size: 16px;
@border_radius: 3px;

.form_element_label {
    font-size: @font_size * .96;
    position: relative;
    transition: inherit;
    color: @primary_color;

    &.required {
        &:after {
            display: block;
            position: absolute;
            content: @trick_required_symbol;

            font-size: 1.6em;
            line-height: .6;
            left: 100%;
            top: 0;
            font-weight: 300;
            margin-left: 1ex;
            transition: inherit;

            .form_error & {
                font-weight: normal;
                color: @red;
            }
        }
    }
}

.form_element {
    display: flex;
    align-items: center;
    position: relative;
    padding: 0;
    font-size: @font_size;
    transition: all .3s ease;

    .form_field_selector & {
        &:nth-of-type(n+2) {
            margin-top: 10px;
        }
    }

    label {
        font-weight: normal;
        color: inherit;
    }

    .textarea_component,
    .input_component {
        border: 0;
        &:not(.file_input_field) {
            box-shadow: 0 0 0 1000px @white inset, 0 0 0 1px @trick_border_color; // prevent browser style if filled
        }
        width: 100%;
        display: block;
        padding: @inner_space * 2 @inner_space * 3;
        border-radius: @border_radius;
        background-color: @white;
        color: @primary_color;
        font-size: inherit;
        line-height: 1.5;
        outline: 0 none !important;
        transition: inherit;

    }

    .textarea_component {
        width: 100%;
        height: @140pt;
        min-height: @140pt;

        resize: vertical;
        transition: inherit;
    }


    .radiobutton,
    .checkbox {
        display: block;
        width: auto;
        height: auto;
        margin: 0 @inner_space * 3 0 0;
        cursor: pointer;
        background-color: fade(@trick_border_color, 5);
        box-shadow: 0 0 0 1px @trick_border_color;

        &:before, &:after {
            display: block;
            width: @font_size;
            height: @font_size;
            margin: @inner_space;
            opacity: 0;
            content: '';
        }
        &:before {
            position: static;
        }
        &:after {
            position: absolute;
            left: 0;
            top: 0;
            background: @trick_backlight_color;
            transform: scale(0);
            transition: opacity 0.25s ease-in-out, transform 0.25s ease-in-out;
        }

        &.radiobutton_checked,
        &.checked {
            &:after {
                opacity: 1;
                transform: scale(1);
            }
        }
    }

    .dropdown_block,
    .checkbox{
        border-radius: @border_radius;
    }
    .radiobutton{
        border-radius: 100%;

        &:after{
            border-radius: 100%;
        }
    }


    .dropdown_block {
        border: 0;
        box-shadow: 0 0 0 1px @trick_border_color;
        padding: 0;
        font-size: inherit;
        position: relative;
    //    line-height: 1;

        .dropdown_title {
            padding: @inner_space * 2 @inner_space * 3;
            font-size: inherit;
            line-height: 1.5;
        }

        &:after { // arrow
            content: "";
            display: block;
            position: absolute;
            right: @inner_space * 3;
            top: 50%;
            margin-top: -@inner_space / 2;
            border-left: @inner_space solid transparent;
            border-right: @inner_space solid transparent;
            border-top: @inner_space solid @primary_color;
        }
    }

    .fileinput_wrapper & {
        flex-direction: column;
    }

    .file_input_container {
        padding: @inner_space * 2 0;
        cursor: pointer;

        white-space: nowrap;
    }

    .file_input_button {
        //display: -ms-flexbox;
        display: flex;
        flex-wrap: nowrap;
        //-ms-flex-align: center;
        //-ms-flex-pack: center;
        align-items: center;

        white-space: nowrap;
        text-decoration: none;
        font-size: inherit;
        padding-right: 0;
        padding-left: 0;
        margin: 0;

        &:before {
            display: inline-flex;
            content: '\00a0'; // space, prevent 0-height
            width: @font_size * 1.5;
            line-height: 1.5;
            height: auto;

            padding: 0;

            .svg-bg(@trick_file_upload_logo, @primary_color, false);
            .bg_params(no-repeat, contain, false, 50%, 50%); //(@repeat,@width,@height,@posX,@posY
            margin-right: @inner_space * 3;

        }

        &:hover,
        &:focus {
            color: inherit;
            background: inherit;
        }

        .button_text {
            display: inline-flex;
            line-height: 1.5;
            text-transform: inherit;
        }

    }

    .file_input_field {
        background: transparent;
        display: flex;
        align-items: center;
        white-space: normal;
        word-wrap: break-word;
        word-break: break-word;
        height: auto;
        padding-left: 0;

        &:empty {
            padding: 0;
        }
    }

    .form_submit{
        border: 0;
        box-shadow: 0 0 0 1px @trick_border_color; // prevent browser style if filled
        width: 100%;
        display: block;
        padding: @inner_space * 3 @inner_space * 8;
        border-radius: @border_radius;
        background-color: @white;
        color: @primary_color;
        font-size: inherit;
        font-weight: normal;
        line-height: 1.5;
        outline: 0 none !important;
        transition: inherit;

        .button_text {
            font-size: inherit;
            font-weight: inherit;
            line-height: inherit;
        }

        &:hover, &:focus {
            background-color: @primary_color;
            color: @white;
        }
    }

    .form_error & {
        color: @primary_color;
        font-weight: normal;

        .input_component,
        .textarea_component,
        .dropdown_block{
            box-shadow: 0 0 0 1000px @white inset, 0 0 0 1px @red;
        }
    }


}

.form_droparea {
    display: flex;
    display: none;
    border-radius: @border_radius;
    border: dashed 1px @trick_border_color;
    background-color: @white;
    flex-direction: row;
    align-items: center;

    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: auto;
    padding: @inner_space * 2 @inner_space * 3;

    .droparea_logo {
        .svg-bg(@trick_file_upload_logo, @primary_color, false);
        width: @font_size * 1.5;
        padding: 0;
        .bg_params(no-repeat, contain, false, 50%, 50%); //(@repeat,@width,@height,@posX,@posY
        margin-right: @inner_space * 3;

        &:before {
            content: '\00a0'; // space, prevent 0-height
            line-height: 1.5;
        }
    }

    .droparea_text {
        font-weight: 300;
        line-height: 1.5;

        color: @primary_color;
    }

    .feedback_dragged & {
        display: flex;
    }
}

.form_element_referral {
    &.dropdown_list {
        border: 0;
        box-shadow: 0 0 0 1px @trick_border_color;

        .dropdown_list_content {}

        .dropdown_option {
            font-size: @font_size;
            padding: @inner_space * 2 @inner_space * 3;
            line-height: 1.5;

            &:hover {
                background-color: @trick_backlight_color;
            }
        }
    }
}
.form_element_required {
    .dropdown_option {
        &.disabled {
            pointer-events: none;
            opacity: .6;
        }
    }
}

.form_label {
    width: 100%;
    text-align: left;
}

